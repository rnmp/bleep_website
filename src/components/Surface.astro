---
interface Props {
  class?: string;
  as?: string;
}

const { class: className, as: Tag = "div", ...props } = Astro.props;
---

<Tag
  class:list={[
    "rounded-3xl bg-[#282828]/4 dark:bg-white/4 ring ring-black/8 dark:ring-white/10 shadow-lg",
    className,
  ]}
  {...props}
>
  <slot />
</Tag>
