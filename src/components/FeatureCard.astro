---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="p-6 rounded-2xl bg-[rgb(from_var(--body-foreground-color)_r_g_b/0.03)] border border-[rgb(from_var(--body-foreground-color)_r_g_b/0.06)] transition-[border-color] duration-200 hover:border-[rgb(from_var(--color-accent)_r_g_b/0.3)] dark:bg-white/4 dark:border-white/7 dark:hover:border-[rgb(from_var(--color-accent)_r_g_b/0.4)]">
  <span class="block text-2xl mb-3">{icon}</span>
  <h4 class="font-semibold text-[0.95rem] mb-1.5">{title}</h4>
  <p class="text-[var(--body-secondary-foreground-color)] text-sm leading-normal">{description}</p>
</div>
