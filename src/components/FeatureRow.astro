---
interface Props {
  title: string;
  description: string;
  image?: string;
  imageDark?: string;
  reverse?: boolean;
  class?: string;
}

const { title, description, image, imageDark, reverse = false, class: className } = Astro.props;
---

<section class:list={["flex flex-col items-center gap-8 px-10 md:px-0 md:flex-row md:gap-16", { "md:flex-row-reverse": reverse }, className]}>
  <div class="md:flex-1 min-w-0 md:px-8">
    <h3 class="text-3xl font-serif mb-4 tracking-wide">{title}</h3>
    <p class="font-medium text-xl text-[var(--body-secondary-foreground-color)]">{description}</p>
  </div>
  {image && (
    <div class="feature-media">
      <picture>
        {imageDark && (
          <source srcset={imageDark} media="(prefers-color-scheme: dark)" />
        )}
        <img src={image} alt="" loading="lazy" />
      </picture>
    </div>
  )}
</section>

<style>
  .feature-media {
    flex: 1;
    min-width: 0;
    border-radius: 32px;
    overflow: hidden;
    background: rgba(40, 40, 40, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.06);
  }

  @media (prefers-color-scheme: dark) {
    .feature-media {
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
  }
  .feature-media img {
    width: 100%;
    display: block;
  }
</style>
