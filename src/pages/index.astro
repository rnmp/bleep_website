---
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
import SiteFooter from "../components/SiteFooter.astro";
import Button from "../components/Button.astro";

const title = "Visual organizer for creative thinkers";
---

<Layout title={`Bleep Â· ${title}`}>
  <main>
    <section class="hero">
      <Image
        class="hero-logo"
        src="/assets/icon_128x128@2x.png"
        alt="Bleep icon"
        width="72"
        height="72"
      />

      <header>
        <h1>Visual organizer <br />for creative minds</h1>
        <h2>Your links, images & notes,<br /> together like never before</h2>
      </header>
    </section>
    <picture class="hero-image">
      <source
        srcset="/assets/preview_dark.png"
        media="(prefers-color-scheme: dark)"
      />
      <img
        src="/assets/preview_light.png"
        alt="A screenshot of the Bleep app featuring content cards in a square grid"
      />
    </picture>
    <p class="downloads-buttons">
      <Button
        href="https://apps.apple.com/app/bleep-think-visually/id1638417383"
      >
        Get for iPhone
      </Button>
      <Button
        href="https://apps.apple.com/app/bleep-think-visually/id6478577586"
      >
        Get for Mac
      </Button>
    </p>
  </main>
  <SiteFooter animate />
</Layout>

<style>
  main {
    padding: 0 var(--safe-area-padding);
  }

  h1 {
    word-spacing: 0.075em;
  }

  .hero {
    text-align: center;
  }

  .hero-logo {
    margin-bottom: 0.5rem;
    filter: drop-shadow(0 0 20px rgb(from var(--color-accent) r g b / 0.4));
  }

  header h1 {
    font-family: "Corben", serif;
    font-weight: 400;
    font-size: 1.5em;
    line-height: 1.2;
    margin-bottom: 0.5em;
  }

  header h2 {
    opacity: 0.5;
    font-weight: 500;
    font-size: 1rem;
    color: var(--body-secondary-foreground-color);
    line-height: 1.2;
  }

  @media (min-width: 720px) {
    header h1 {
      font-size: 1.75em;
      margin-bottom: 0.25em;
    }

    header h2 {
      font-size: 1.15rem;
    }
    br {
      display: none;
    }
  }

  .hero-image {
    display: flex;
    align-items: center;
    justify-content: center;
    max-height: 50vh;
    margin: 3rem 0;
  }

  .hero-image img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    box-shadow:
      0 0 0 1px rgba(var(--shadow-color-rgb), 0.1),
      0 20px 40px -15px rgba(var(--shadow-color-rgb), 0.15);
    border-radius: 6px;
  }

  @media (min-width: 720px) {
    .hero-image img {
      border-radius: 12px;
    }
  }

  .downloads-buttons {
    display: flex;
    gap: 1em;
    justify-content: center;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideUpAndScale {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.9);
    }

    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .hero-logo,
  header h1,
  header h2,
  .hero-image,
  .downloads-buttons {
    opacity: 0;
  }

  /* Sequence the animations with proportional durations */
  .hero-logo {
    animation: slideUpAndScale 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    animation-delay: 0.4s;
  }

  header h1 {
    animation: slideUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    animation-delay: 0.4s;
  }

  header h2 {
    animation: slideUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    animation-delay: 0.5s;
  }

  .hero-image {
    animation: slideUp 0.5s ease-out forwards;
    animation-delay: 0.15s;
  }

  .downloads-buttons {
    animation: slideUp 0.4s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    animation-delay: 0.8s;
  }
</style>
