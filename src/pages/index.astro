---
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
import SiteFooter from "../components/SiteFooter.astro";
import Button from "../components/Button.astro";
---

<Layout>
  <main>
    <section class="hero">
      <Image
        class="hero-logo"
        src="/assets/icon_128x128@2x.png"
        alt="Bleep icon"
        width="64"
        height="64"
      />

      <header>
        <h1>The ultra-niche thoughtboard for creative thinkers</h1>
        <h2>Organize notes, links & images like never before</h2>
      </header>
    </section>
    <picture class="hero-image">
      <source
        srcset="/assets/preview_dark.png"
        media="(prefers-color-scheme: dark)"
      />
      <img
        src="../assets/preview_light.png"
        alt="A screenshot of the Bleep app featuring content cards in a square grid"
      />
    </picture>
    <p class="downloads-buttons">
      <Button
        href="https://apps.apple.com/app/bleep-think-visually/id1638417383"
      >
        Get for iPhone
      </Button>
      <Button
        href="https://apps.apple.com/app/bleep-think-visually/id6478577586"
      >
        Get for Mac
      </Button>
    </p>
  </main>
  <SiteFooter animate />
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 0 20px;
  }

  .hero-logo {
    margin-bottom: 0.5rem;
  }

  header h1 {
    font-family: "Corben", serif;
    font-weight: 400;
    font-size: 1.65em;
  }

  header h2 {
    opacity: 0.7;
    font-weight: 500;
    font-size: 1.25rem;
  }

  .hero-image {
    display: flex;
    align-items: center;
    justify-content: center;
    max-height: 50vh;
    margin: 3rem 0;
  }

  .hero-image img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    box-shadow:
      0 0 0 1px rgba(var(--body-foreground-color-rgb), 0.1),
      0 20px 40px -15px rgba(var(--body-foreground-color-rgb), 0.15);
    border-radius: 12px;
  }

  .hero-logo,
  header,
  .hero-image,
  .downloads-buttons {
    opacity: 0;
    animation: slideDown 0.8s ease-out forwards;
  }

  /* Sequence the animations */
  .hero-logo {
    animation-delay: 0.1s;
  }

  header {
    animation-delay: 0.3s;
  }

  .hero-image {
    animation-delay: 0.5s;
  }

  .downloads-buttons {
    display: inline-flex;
    gap: 1em;
    justify-content: center;
    animation-delay: 0.6s;
  }
</style>
