---
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import FeatureRow from "../components/FeatureRow.astro";
import Surface from "../components/Surface.astro";
import Testimonials from "../components/Testimonials.astro";

const title = "Organize Your Ideas Visually";
---

<Layout title={`Bleep Â· ${title}`}>
  <SiteHeader />
  <main>
    <section
      class="relative overflow-hidden text-center flex flex-col items-center"
    >
      <svg class="hidden">
        <filter id="noise">
          <feTurbulence
            type="fractalNoise"
            baseFrequency="0.65"
            numOctaves="3"
            stitchTiles="stitch"></feTurbulence>
        </filter>
      </svg>
      <div class="hero-gradient"></div>
      <div class="hero-noise"></div>

      <header
        class="mt-[130px] shrink-0 h-[400px] flex items-center justify-center flex-col relative z-1"
      >
        <picture class="block mb-12 relative z-1">
          <source
            srcset="/assets/app_icon_dark@2x.png"
            media="(prefers-color-scheme: dark)"
          />
          <img
            class="w-[66px] h-[66px] transition-[filter] duration-300 drop-shadow-xl drop-shadow-accent/20 dark:drop-shadow-black/20"
            src="/assets/app_icon@2x.png"
            alt="An app icon representing the letter B in abstract form"
          />
        </picture>

        <h1
          class="font-serif font-normal md:leading-16 text-3xl md:text-5xl mb-4 tracking-tight"
        >
          Beautiful. Private. Organized.
        </h1>
        <h2
          class="font-[450] md:text-lg md:text-xl text-[#647082] dark:text-[#cfebfe] leading-normal"
        >
          Bleep is a visual bookmarking app that works<br />offline and syncs
          securely via iCloud
        </h2>

        <a
          class="inline-block leading-4 mt-8 bg-white text-black font-[550] text-[0.95rem] rounded-full py-2.5 px-6 ring ring-black/8 dark:border-transparent shadow-[0_0_8px_rgb(0_0_0/0.05)] no-underline transition-[transform,box-shadow] duration-200"
          href="https://apps.apple.com/app/bleep-think-visually/id1638417383"
        >
          Get Bleep for iOS &amp; Mac
        </a>
      </header>

      <picture class="flex-1 relative z-1">
        <source
          srcset="/assets/hero_devices_dark.png"
          media="(prefers-color-scheme: dark)"
        />
        <img
          class="block max-h-[500px] object-scale-down"
          src="/assets/hero_devices_light.png"
          alt="Bleep running on MacBook, iPad, and iPhone"
        />
      </picture>
    </section>

    <div
      class="relative max-w-4xl mx-auto pt-15 md:pt-20 pb-15 md:pb-40 flex flex-col gap-20 md:gap-30"
    >
      <div class="absolute -top-10" id="features"></div>
      <div class="px-6 text-center">
        <span
          class="text-[var(--color-accent)] uppercase tracking-[.5em] text-sm font-bold"
        >
          Features
        </span>
        <h2
          class="font-serif font-normal text-3xl md:text-[2.5rem] leading-[1.2] mt-8"
        >
        Have Fun With <br class="md:hidden" />Your Thoughts
        </h2>
      </div>

      <div class="flex flex-col gap-20">
        <FeatureRow
          title="Capture Anything"
          description="Save bookmarks, images, and even notes into Bleep. All with rich previews."
          image="/assets/feature_capture_light.png"
          imageDark="/assets/feature_capture_dark.png"
          reverse
        />

        <FeatureRow
          title="Organize Visually"
          description="Put your items into dedicated rooms. Drag to order them however you want."
          image="/assets/feature_organize_light.png"
          imageDark="/assets/feature_organize_dark.png"
        />

        <FeatureRow
          title="Access Everywhere"
          description="Save ideas wherever you are, even offline. Bleep keeps your data secure and synced across your devices."
          image="/assets/feature_access_light.png"
          imageDark="/assets/feature_access_dark.png"
          reverse
        />
      </div>
    </div>
    <div class="relative md:mx-auto pb-20 md:pb-40 flex flex-col items-center gap-10">
      <div class="absolute -top-31" id="pricing"></div>
      <div class="text-center flex flex-col items-center">
        <span
          class="text-[var(--color-accent)] uppercase tracking-[.5em] text-sm font-bold"
        >
          Pricing
        </span>
        <h2
          class="font-serif font-normal text-3xl md:text-[2.5rem] leading-[1.2] mt-8 mb-8"
        >
        Organize Your <br class="md:hidden" />Ideas Visually
        </h2>

        <fieldset
          id="plan_timeframe_selector"
          class="text-xs font-semibold p-1 rounded-full bg-black/4 dark:bg-white/4 flex"
        >
          <label
            for="plan_timeframe_monthly"
            class="has-checked:bg-white dark:has-checked:bg-white/30 has-checked:text-accent dark:has-checked:text-white has-checked:ring has-checked:ring-black/8 dark:has-checked:ring-white/50 px-3 py-1 inline-block rounded-full cursor-pointer"
          >
            <input
              class="hidden"
              type="radio"
              id="plan_timeframe_monthly"
              name="plan_timeframe"
              value="monthly"
            />
            Monthly
          </label>
          <label
            for="plan_timeframe_annually"
            class="has-checked:bg-white dark:has-checked:bg-white/30 has-checked:text-accent dark:has-checked:text-white has-checked:ring has-checked:ring-black/8 dark:has-checked:ring-white/50 px-3 py-1 inline-block rounded-full cursor-pointer"
          >
            <input
              class="hidden"
              type="radio"
              checked
              id="plan_timeframe_annually"
              name="plan_timeframe"
              value="annually"
            />
            Yearly
          </label>
          <label
            for="plan_timeframe_lifetime"
            class="has-checked:bg-white dark:has-checked:bg-white/30 has-checked:text-accent dark:has-checked:text-white has-checked:ring has-checked:ring-black/8 dark:has-checked:ring-white/50 px-3 py-1 inline-block rounded-full cursor-pointer"
          >
            <input
              class="hidden"
              type="radio"
              name="plan_timeframe"
              id="plan_timeframe_lifetime"
              value="lifetime"
            />
            Lifetime
          </label>
        </fieldset>
      </div>

      <div class="flex flex-col md:flex-row gap-4 w-full px-6">
        <Surface class="md:w-72 p-7 pb-8 flex flex-col text-start gap-5">
          <h3 class="mb-1 font-bold">Bleep Demo</h3>
          <h3 class="font-serif text-3xl">Free</h3>
          <ul class="text-sm flex flex-col gap-1">
            <li class="flex items-center gap-2">
              <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
              Save 50 links, images & notes
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
              Organize into 5 rooms
            </li>
        <li class="flex items-center gap-2">
              <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
              Browser extension
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
          100% private, no sign ups
        </li>
        <li class="flex items-center gap-2">
              <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
              Access items offline 
        </li>
        <li class="flex items-center gap-2">
              <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
          Sync devices via iCloud
        </li>
          </ul>
          <a
            class="inline-block leading-4 text-center bg-white text-black font-semibold ring ring-black/8 text-[0.95rem] rounded-full py-2.5 px-6 no-underline"
            href="https://apps.apple.com/app/bleep-think-visually/id1638417383"
          >
            Try Bleep for Free
          </a>
        </Surface>
        <Surface class="md:w-72 p-7 pb-8 flex flex-col text-start gap-5">
          <h2 class="mb-1 font-bold">Bleep Unlimited</h2>
          <h3 class="flex items-end gap-2">
            <span id="plan_price_amount" class="font-serif text-3xl">
              $29.99
            </span>
            <span
              id="plan_price_description"
              class="text-sm text-gray-600 dark:text-gray-400">billed yearly</span
            >
          </h3>
          <ul class="text-sm flex flex-col gap-1">
            <li class="flex items-center gap-2">
              <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
              Unlimited links, images & notes
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
              Unlimited rooms
            </li>
        <li class="flex items-center gap-2">
          <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
          Browser extension
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
          100% private, no sign ups
        </li>
        <li class="flex items-center gap-2">
              <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
              Access items offline 
        </li>
        <li class="flex items-center gap-2">
              <svg class="w-3.5 h-3.5 shrink-0 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
          Sync devices via iCloud
        </li>
          </ul>
          <a
            class="inline-block leading-4 text-center bg-white text-black font-semibold ring ring-black/8 text-[0.95rem] rounded-full py-2.5 px-6 no-underline"
            href="https://apps.apple.com/app/bleep-think-visually/id1638417383"
          >
            Try Bleep for Free
          </a>
        </Surface>
      </div>
    </div>

    <Testimonials />
  </main>
  <SiteFooter animate />
</Layout>

<script>
  plan_timeframe_selector.addEventListener("change", (event) => {
    const [amount, description] = (() => {
      switch (event.target.value) {
        case "monthly":
          return ["$3.99", "billed monthly"];
        case "lifetime":
          return ["$99.99", "billed once"];
        default:
          return ["$29.99", "billed yearly"];
      }
    })();

    plan_price_amount.innerHTML = amount;
    plan_price_description.innerHTML = description;
  });
</script>

<style>
  h1 {
    word-spacing: 0.075em;
  }

  /* Hero gradient - complex radial gradient with viewport units */
  .hero-gradient {
    position: absolute;
    inset: 0;
    z-index: 0;
    width: 2000px;
    height: 2000px;
    left: 50%;
    transform: translate(-50%);
    background: radial-gradient(
      circle at 50% 52%,
      rgba(94, 158, 209, 0.5) 0%,
      rgba(94, 158, 209, 0) 70%
    );
    pointer-events: none;
  }

  .hero-noise {
    position: absolute;
    inset: 0;
    z-index: 0;
    filter: url(#noise);
    opacity: 0.05;
    pointer-events: none;
  }

  @media (prefers-color-scheme: dark) {
    .hero-gradient {
      background: radial-gradient(
        circle at 50% 52%,
        rgba(94, 158, 209, 0.5) 0%,
        rgba(94, 158, 209, 0) 70%
      );
    }
  }
</style>
